<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="button">
        <item name="android:layout_marginLeft">50dip</item>
        <item name="android:layout_marginRight">50dip</item>
        <item name="android:layout_marginTop">15dip</item>
        <item name="android:layout_marginBottom">15dip</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/blue_button</item>
    </style>

    <style name="text">
        <item name="android:layout_marginLeft">60dip</item>
        <item name="android:layout_marginRight">50dip</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center</item>
    </style>
    
        
</resources>
